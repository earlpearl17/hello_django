#!/bin/bash
# Name of the application
NAME="hello_app"

# gunicorn location
GUNICORN=/usr/local/bin/gunicorn

# location of site packages
SITE_PKGS=/usr/local/lib/python3.6/site-packages

# Django project directory
DJANGODIR=/home/ubuntu/hello_django/hello

# we will communicte using this unix socket
SOCKFILE=/home/ubuntu/hello_django/run/gunicorn.sock

# the user to run as
#USER=ubuntu
USER=root

# the group to run as
#GROUP=ubuntu
GROUP=root

# how many worker processes should Gunicorn spawn
NUM_WORKERS=3

# which settings file should Django use
DJANGO_SETTINGS_MODULE=hello.settings

# WSGI module name
DJANGO_WSGI_MODULE=hello.wsgi

echo "Starting $NAME as `whoami`"

# Activate the virtual environment
cd $DJANGODIR
source ../bin/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DJANGODIR:$PYTHONPATH

# Create the run directory if it doesn't exist
RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR

# Start your Django Unicorn
# Programs meant to be run under supervisor should not daemonize themselves (do not use --daemon)
#cd ..
#exec /home/ubuntu/hello_django/bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
#exec ./bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
#exec $SITE_PKGS/gunicorn ${DJANGO_WSGI_MODULE}:application \
exec $GUNICORN ${DJANGO_WSGI_MODULE}:application \
--name $NAME \
--workers $NUM_WORKERS \
--user=$USER --group=$GROUP \
--bind=unix:$SOCKFILE \
--log-level=debug \
--log-file=-
